permalink: blog/index.html
---

{% extends "layouts/base.njk" %}

{% set activeSection = "blog" %}

{% set metaTitle = "Toughts and Ramblings" %}
{% set metaDescription = "The Math Doctor" %}
{% set metaImage = site.url ~ "/img/me-600.jpg" %}

{% block content %}
<main>

  <div class="c-pageintro">
    <div class="l-container">
      <div class="c-pageintro__inner">

        <p class="c-suptitle">Thoughts &amp; ramblings</p>
        <h1 class="c-h1  c-h1--invert">Blog archives</h1>
        <p class="c-txtintro">In this section you will find articles/posts that may prove helpful to you during your prepration days. Do check them out in your leisure time.</p>

      </div>
    </div>
  </div>

  <div class="c-banner  c-banner--blog"></div>

  <div class="c-pagecontent">
    <div class="l-container">

      {% for post in collections.blogposts | reverse %}
        {% if loop.first %}<ul class="c-list-ui">{% endif %}
        <li>
          <article class="c-blogteaser">
            <p class="c-blogteaser__date"><time datetime="{{ post.date | date('YYYY-MM-DD') }}">{{ post.date|date("MMMM Do, Y") }}</time></p>
            <h2 class="c-blogteaser__title"><a class="c-blogteaser__link" href="{{ post.url }}">{{ post.data.title }}</a></h2>
          </article>
        </li>
        {% if loop.last %}</ul>{% endif %}
      {% endfor %}

    </div>
  </div>

</main>
{% endblock %}
